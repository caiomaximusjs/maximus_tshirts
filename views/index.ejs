<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/assets/img/logoTshirt.png" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Maximus Tshirts</title>
  </head>
  <%- include('./components/nav.ejs') %>
  <header>
    <img id="banner" src="./assets/img/banner.png" alt="" />
  </header>
  <% if(message !="" ) {%> <%- include('./components/alert.ejs') %> <% } %>

  <body>
    <h1>Lista de produtos</h1>
    <%- include('./components/search.ejs') %> <% if(tshirtSearch.length==0){ %>
    <div class="container">
      <% tshirts.forEach(shirt=> { %>
      <div class="item">
        <a href="/tshirt/<%=shirt.id %> ">
          <img
            src="<%= shirt.imagem %>"
            onmouseover="this.src='<%= shirt.imagem2 %>'"
            onmouseout="this.src='<%= shirt.imagem %>'"
            alt=""
          />
        </a>

        <p><%= shirt.nome %></p>
        <p id="preco">R$<%= shirt.preco %></p>
        <div id="icons">
          <a class="veja" href="/tshirt/<%=shirt.id %>">DETALHES</a>
        </div>
      </div>
      <% }); %>
    </div>
    <% }else{ %>

    <section>
      <div class="results">
      <h2 id="resultados">Resultados da pesquisa: </h2>
      <a id="todos"href="/">Todos os produtos</a>
    </div>
      <div class="pesquisa">
      </div>
    </section>
    <div class="container">
      <% tshirtSearch.forEach(shirt=> { %>
      <div class="item">
        <a href="/tshirt/<%=shirt.id %> ">
          <img
            src="<%= shirt.imagem %>"
            onmouseover="this.src='<%= shirt.imagem2 %>'"
            onmouseout="this.src='<%= shirt.imagem %>'"
            alt=""
          />
        </a>

        <p><%= shirt.nome %></p>
        <p id="preco">R$<%= shirt.preco %></p>
        <div id="icons">
          <a class="veja" href="/tshirt/<%=shirt.id %>">DETALHES</a>
        </div>
      </div>
      <% }); %>
    </div>

    <% } %>
    <footer>
      <p>Site desenvolvido por Caio Maximus</p>
      <p>Dados retirados do site <a href="https://singapurastore.com/">SingapuraStore</a></p>
    </footer>
  </body>
  <script src="js/script.js"></script>
</html>
